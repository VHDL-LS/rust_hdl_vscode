{
    "comments": {
        "lineComment": "--",
        "blockComment": [ "/*", "*/" ]
    },
    "brackets": [
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["(", ")"],
        ["\"", "\""],
        ["\\", "\\"]
    ],
    "surroundingPairs": [
        ["(", ")"],
        ["\"", "\""],
        ["\\", "\\"]
    ],
    "indentationRules": {
        "increaseIndentPattern": {
            "pattern": "\\b(begin|is|port|else|loop|generate|then)\\b",
            "flags": "i"
        },
        "decreaseIndentPattern": {
            "pattern": "^\\s*(elsif|else|end|begin)\\b",
            "flags": "i"
        }
    }
}